@using NewLife.Web;
@using XCode;
@using XCode.Membership;
@model EntityList<Menu>
@{
    var fact = ViewBag.Factory as IEntityOperate;
    var page = ViewBag.Page as Pager;
}
<div class="panel panel-default">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped table-condensed">
            <thead>
                <tr>
                    <th><a href="?Sort=ID">编号</a></th>
                    <th><a href="?Sort=Name">名称</a></th>
                    <th><a href="?Sort=DisplayName">显示名</a></th>
                    <th><a href="?Sort=ParentID">父编号</a></th>
                    <th><a href="?Sort=Url">链接</a></th>
                    <th><a href="?Sort=Sort">排序</a></th>
                    <th><a href="?Sort=Visible">是否可见</a></th>
                    <th><a href="?Sort=Necessary">必要的菜单</a></th>
                    <th>升</th>
                    <th>降</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                    <tr>
                        <td>@entity.ID</td>
                        <td>@entity.TreeNodeName</td>
                        <td>@entity.DisplayName</td>
                        <td>@entity.ParentMenuName</td>
                        <td>@entity.Url</td>
                        <td>@entity.Sort</td>
                        @Html.Partial("_List_Data_Item", new Pair(entity, fact.Table.FindByName("Visible")))
                        @Html.Partial("_List_Data_Item", new Pair(entity, fact.Table.FindByName("Necessary")))
                        <td><span class="glyphicon glyphicon-arrow-up" style="color: green;"></span></td>
                        <td><span class="glyphicon glyphicon-arrow-down" style="color: red;"></span></td>
                        <td>
                            @Html.Partial("_List_Data_Action", entity.ID)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <p>
            @Html.Partial("_List_Pager")
        </p>
    </div>
</div>