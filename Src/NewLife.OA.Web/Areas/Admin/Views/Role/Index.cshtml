@model XCode.EntityList<Role>
@{
    var grid = ViewBag.Grid;
}
<div class="panel panel-default">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped table-condensed">
            <thead>
                <tr>
                    <th> <a href="@Url.Action("Index/Sort/id")">编号</a></th>
                    <th><a href="@Url.Action("Index/Sort/Name")">名称</a></th>
                    <th><a href="@Url.Action("Index/Sort/IsSystem")">系统角色</a></th>
                    <th><a href="@Url.Action("Index/Sort/Permission")">权限</a></th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                    <tr>
                        <td>@entity.ID</td>
                        <td>@entity.Name</td>
                        <td>@entity.IsSystem</td>
                        <td>@entity.Permission</td>
                        <td>
                            @Html.Partial("_List_Data_Action", entity.ID)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <p>
            @Html.Partial("_List_Pager")
        </p>
    </div>
</div>