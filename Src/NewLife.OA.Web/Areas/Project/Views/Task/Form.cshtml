@using System.Reflection
@using XCode
@using XCode.Configuration
@model WorkTask
@{
    var fact = EntityFactory.CreateOperate(ViewData.ModelMetadata.ModelType);
    var isNew = (Model as IEntity).IsNullKey;
}
<div class="panel panel-default">
    <div class="form-horizontal">
        @if (ViewBag.StatusMessage != null)
        {
            <div class="alert alert-success alert-dismissible text-center" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@ViewBag.StatusMessage</strong>
            </div>
        }
        @using (Html.BeginForm((isNew ? "Add" : "Edit"), null, new { id = Model[fact.Unique.Name] }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.Partial("_Form_Item", new Pair(Model, WorkTask._.Name))
            </div>
            <div class="form-group">
                @Html.Partial("_Form_Item", new Pair(Model, WorkTask._.Content))
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">状态</label>
                <div class="input-group col-md-2" style="float: left">
                    @Html.ForEditor(WorkTask._.Status, Model.TaskStatus)
                </div>
                @Html.Partial("_Form_Item", new Pair(Model, WorkTask._.Progress))
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">优先级</label>
                <div class="input-group col-md-2" style="float: left">
                    @Html.ForEditor(WorkTask._.Priority, Model.TaskPriority)
                </div>
                @Html.Partial("_Form_Item", new Pair(Model, WorkTask._.Score))
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">负责人</label>
                <div class="input-group col-md-2" style="float: left">
                    @Html.ForDropDownList(WorkTask._.MasterID, UserX.FindAllWithCache())
                </div>
                <label class="control-label col-md-2">成员</label>
                <div class="input-group col-md-2" style="float: left">
                    @Html.ForListBox("MemberIDs", UserX.FindAllWithCache())
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">计划开始时间</label>
                <div class="input-group col-md-2" style="float: left">
                    @Html.ForDateTime(m => m.PlanStartTime)
                </div>
                <label class="control-label col-md-2">计划开始时间</label>
                <div class="input-group col-md-2" style="float: left">
                    @Html.ForDateTime(m => m.PlanEndTime)
                </div>
            </div>
            if (!isNew)
            {
                <div class="form-group">
                    <label class="control-label col-md-2">开始时间</label>
                    <div class="input-group col-md-2" style="float: left">
                        @Model.StartTime.ToFullString("")
                    </div>
                    <label class="control-label col-md-2">结束时间</label>
                    <div class="input-group col-md-2">
                        @Model.EndTime.ToFullString("")
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">实际工作日</label>
                    <div class="col-md-1">
                        @Model.Cost.ToString("n0")
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">浏览数</label>
                    <div class="col-md-1">
                        @Model.Views.ToString("n0")
                    </div>
                    <label class="control-label col-md-1">修改次数</label>
                    <div class="col-md-1">
                        @Model.Historys.ToString("n0")
                    </div>
                    <label class="control-label col-md-1">评论数</label>
                    <div class="col-md-1">
                        @Model.Comments.ToString("n0")
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">创建者</label>
                    <div class="col-md-2">
                        @Model.CreateUserName
                    </div>
                    <label class="control-label col-md-2">创建时间</label>
                    <div class="col-md-2">
                        @Model.CreateTime.ToFullString("")
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">更新者</label>
                    <div class="col-md-2">
                        @Model.UpdateUserName
                    </div>
                    <label class="control-label col-md-2">更新时间</label>
                    <div class="col-md-2">
                        @Model.UpdateTime.ToFullString("")
                    </div>
                </div>
            }
            <div class="form-actions">
                <label class="control-label col-md-4"></label>
                <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-@(isNew ? "plus" : "save")"></i><strong>@(isNew ? "新增" : "保存")</strong></button>
                <button type="button" class="btn btn-danger" onclick="history.go(-1);"><i class="glyphicon glyphicon-remove"></i><strong>取消</strong></button>
            </div>
        }
    </div>
</div>